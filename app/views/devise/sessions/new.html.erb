<div class="row">

<div class="col-xs-10 col-xs-offset-1 inner-box">
<div class="page-header text-center well well-sm">
<h1>Log in</h1>
</div>
<hr/>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.label :email,"Email",class: "highlight-label"%>
    <%= f.input :email, required: false, autofocus: true ,label: false ,placeholder: "Email Address"%>
    <%= f.label :password,"Password",class: "highlight-label"%>
    <%= f.input :password, required: false,label: false ,placeholder: "********" %>
    
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <hr/>
  <div class="form-actions">
    <%= f.button :submit, "Log in" ,class: "col-xs-12 btn btn-success btn-sm" %>
  </div>
<% end %>
  <br/>
  <br/>
  <hr/>
  
</div>

</div>