
<div class="col-xs-6 col-xs-offset-3 form-custom">
<%= simple_form_for @member, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name ,placeholder: "Enter the member's name here"%>
  
  <%= f.input :admission_date %>
  
  <% #f.input :status,disabled: true %>
  
  <%= f.input :amount,as: :radio_buttons,collection: [['600',600],['1500',1500]] %>
  
 
 <hr/>
  <%= f.button :submit, :class => 'btn btn-primary btn-xs' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                members_path, :class => 'btn btn-default btn-xs' %>
<% end %>
</div>
