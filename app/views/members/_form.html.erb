
<div class="col-xs-12 form-custom">
<%= simple_form_for @member, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  
  <%= f.input :admission_date %>
  
  <%= f.input :status,disabled: true %>
  
  <%= f.input :amount,as: :radio_buttons,collection: [['500',500],['1100',1100]] %>
  

  <%= f.button :submit, :class => 'btn btn-primary btn-sm' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                members_path, :class => 'btn btn-default btn-sm' %>
<% end %>
</div>
