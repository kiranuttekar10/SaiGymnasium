
<%- model_class = Member -%>
<div class="page-header">
  <h3>Pending Fees</h3>
</div>
<%= form_tag members_path, :method => 'get' do %>
        
        <div>
        <div >Name of member: </div>
            <%= text_field_tag :search, params[:search],id: 'search-member-autocomplete' %>
            <%= submit_tag "Search", :name => nil %>
       </div>
<% end %>
<hr/>
<table class="table table-responsive table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:next_fee_date) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  
<% if @members.blank? %>
  <p>There are no members with pending fee.</p>
<% else %>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        
        <td><%= link_to member.name, member_path(member) %></td>
        <% if member.next_fee_date != nil %>
        <td><%=link_to member.next_fee_date.strftime("%d-%m-%Y"), member_date_change_path(member)%></td>
        <% else %>
        <td></td>
        <% end %>
        <% if member.Unpaid? %>
        <td ><span id="button-style-unpaid"><%= member.status %></span></td>
        <% else %>
        <td ><span id="button-style-paid"><%= member.status %></span></td>
        <% end %>
        <td>
          <% if member.next_fee_date != nil %>
          <% if member.next_fee_date < Date.today || member.Unpaid? %>
          <%= link_to 'Fee Pay',
                       {:controller => 'members' , :action => 'fee_pay',:id => member} , :class => 'btn btn-default btn-xs' %>
          <% end %>
          <% else %>
          <%= link_to 'Fee Pay',
                       {:controller => 'members' , :action => 'fee_pay',:id => member} , :class => 'btn btn-default btn-xs' %>
          <% end %>
         
         
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      member_path(member),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
<% end%>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_member_path,
            :class => 'btn btn-primary' %>
